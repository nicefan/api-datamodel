{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist",
    "lib": ["esnext", "dom"],
    "types": ["./types"],
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "example.ts"],
  "exclude": ["example.ts"]
}

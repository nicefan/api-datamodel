{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "lib/types",
    "lib": ["esnext", "dom"],
  },
  "include": ["types","src/*"],
}
